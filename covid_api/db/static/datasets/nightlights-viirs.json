{
    "id": "nightlights-viirs",
    "name": "Nightlights VIIRS",
    "type": "raster-timeseries",
    "time_unit": "day",
    "s3_location": "bm_500m_daily",
    "is_periodic": true,
    "source": {
        "type": "raster",
        "tiles": [
            "{api_url}/{z}/{x}/{y}@1x?url=s3://covid-eo-data/bm_500m_daily/VNP46A2_V011_{spotlightId}_{date}_cog.tif&resampling_method=nearest&bidx=1&rescale=0%2C100&color_map=viridis"
        ]
    },
    "exclusive_with": [
        "agriculture",
        "no2",
        "co2-diff",
        "co2",
        "gibs-population",
        "car-count",
        "nightlights-hd",
        "detection-multi",
        "water-chlorophyll",
        "water-spm",
        "detections-ship",
        "detections-plane"
    ],
    "swatch": {
        "color": "#C0C0C0",
        "name": "Grey"
    },
    "legend": {
        "type": "gradient",
        "min": "less",
        "max": "more",
        "stops": [
            "#440357",
            "#3b508a",
            "#208f8c",
            "#5fc961",
            "#fde725"
        ]
    },
    "info": "Darker colors indicate fewer night lights and less activity. Lighter colors indicate more night lights and more activity. Check out the HD dataset below to see a light-corrected version of this dataset."
}